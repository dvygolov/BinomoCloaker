{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Launch PHP Server",
			"type": "shell",
			"command": "php -S localhost:8080 -t ${workspaceFolder}",
			"isBackground": true,
			"problemMatcher": {
				"owner": "php",
				"pattern": [
					{
						"regexp": "^(Parse error):\\s+(.*?)(?: in (.*?))? on line (\\d+)$",
						"kind": "file",
						"file": 3,
						"line": 4,
						"message": 2
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^Development Server \\(http://.*\\) started",
					"endsPattern": "^.*$"
				}
			}
		}
	]
}